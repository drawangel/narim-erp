<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add client_purchase_line_id to product form -->
    <record id="product_template_form_view_client_purchase" model="ir.ui.view">
        <field name="name">product.template.form.client.purchase</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="jewelry_product.product_template_form_view_jewelry"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin_type']" position="after">
                <field name="client_purchase_line_id"
                       invisible="origin_type != 'client'"/>
            </xpath>
        </field>
    </record>
</odoo>
