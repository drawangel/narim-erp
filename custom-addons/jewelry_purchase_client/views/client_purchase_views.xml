<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Client Purchase Order Form View -->
    <record id="jewelry_client_purchase_view_form" model="ir.ui.view">
        <field name="name">jewelry.client.purchase.view.form</field>
        <field name="model">jewelry.client.purchase</field>
        <field name="arch" type="xml">
            <form string="Client Purchase">
                <header>
                    <button name="action_confirm"
                            string="Confirmar"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <!-- Botón Recuperar para empeños -->
                    <button name="action_open_recovery_wizard"
                            string="Recuperar Empeño"
                            type="object"
                            class="btn-success"
                            icon="fa-undo"
                            invisible="not can_recover"/>
                    <button name="action_mark_available"
                            string="Marcar Disponible"
                            type="object"
                            class="btn-primary"
                            invisible="state not in ('blocked', 'recoverable') or not can_process"/>
                    <button name="action_open_force_unlock_wizard"
                            string="Desbloquear"
                            type="object"
                            class="btn-warning"
                            groups="jewelry_base.group_jewelry_manager"
                            invisible="state != 'blocked'"/>
                    <!-- Bulk actions for Available state -->
                    <button name="action_open_receive_all_wizard"
                            string="Recibir Todo"
                            type="object"
                            class="btn-primary"
                            icon="fa-archive"
                            groups="jewelry_base.group_jewelry_manager"
                            invisible="state != 'available'"/>
                    <button name="action_open_smelt_all_wizard"
                            string="Fundir Todo"
                            type="object"
                            class="btn-warning"
                            icon="fa-fire"
                            groups="jewelry_base.group_jewelry_manager"
                            invisible="state != 'available'"/>
                    <button name="action_cancel"
                            string="Cancelar"
                            type="object"
                            invisible="state in ('processed', 'recovered', 'cancelled')"/>
                    <button name="action_draft"
                            string="Volver a Borrador"
                            type="object"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,blocked,recoverable,available,processed,recovered"/>
                </header>
                <sheet>
                    <!-- Ribbons para diferentes estados -->
                    <widget name="web_ribbon" title="Bloqueo Policial"
                            bg_color="bg-warning"
                            invisible="state != 'blocked'"/>
                    <widget name="web_ribbon" title="Recuperable"
                            bg_color="bg-info"
                            invisible="state != 'recoverable'"/>
                    <widget name="web_ribbon" title="Recuperado"
                            bg_color="bg-success"
                            invisible="state != 'recovered'"/>
                    <widget name="web_ribbon" title="Cancelado"
                            bg_color="bg-danger"
                            invisible="state != 'cancelled'"/>
                    <img src="/jewelry_purchase_client/static/img/logo_mossos.png?v=3"
                         alt="Police"
                         title="Período de bloqueo policial activo"
                         class="o_police_badge"
                         invisible="state != 'blocked'"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                            <span class="badge bg-warning text-dark ms-2"
                                  invisible="operation_type != 'recoverable'">EMPEÑO</span>
                        </h1>
                    </div>

                    <group>
                        <group string="Información del Cliente">
                            <field name="operation_type" widget="radio"
                                   readonly="state != 'draft'"
                                   options="{'horizontal': true}"/>
                            <field name="partner_id"
                                   readonly="state != 'draft'"
                                   context="{'show_vat': True}"/>
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="warehouse_id" readonly="state != 'draft'"
                                   options="{'no_create': True}"/>
                            <field name="user_id"/>
                        </group>
                        <group string="Bloqueo Policial" invisible="state == 'draft'">
                            <field name="blocking_days"/>
                            <field name="blocking_end_date"/>
                            <field name="days_remaining"
                                   invisible="state not in ('blocked',)"
                                   decoration-danger="days_remaining &lt;= 3"/>
                            <field name="can_process" invisible="1"/>
                            <field name="can_recover" invisible="1"/>
                            <field name="force_unlocked" invisible="1"/>
                            <div colspan="2" class="text-warning fw-bold"
                                 invisible="not force_unlocked">
                                <i class="fa fa-exclamation-triangle me-1"/>
                                Desbloqueado por
                                <field name="force_unlock_user_id"
                                       widget="many2one_avatar_user"
                                       class="d-inline mx-1" readonly="1"/>
                                el <field name="force_unlock_date" readonly="1"/>
                            </div>
                        </group>
                    </group>

                    <!-- Sección de Empeño - solo visible para operation_type == recoverable -->
                    <group invisible="operation_type != 'recoverable'">
                        <group string="Condiciones del Empeño">
                            <label for="recovery_days"/>
                            <div class="d-flex align-items-center gap-2">
                                <field name="recovery_days" readonly="state != 'draft'" class="oe_inline"/>
                                <span class="text-muted" invisible="not recovery_deadline_preview or state != 'draft'">
                                    → <field name="recovery_deadline_preview" class="oe_inline"/>
                                </span>
                            </div>
                            <field name="recovery_margin_percent" widget="percentage"
                                   readonly="state != 'draft'"/>
                            <field name="daily_surcharge_percent" widget="percentage"
                                   readonly="state != 'draft'"/>
                            <field name="recovery_deadline" invisible="state == 'draft'"/>
                            <field name="days_overdue" invisible="state == 'draft'"
                                   decoration-danger="days_overdue > 0"/>
                        </group>
                        <group string="Importe de Recuperación"
                               invisible="state == 'draft'">
                            <field name="recovery_base_amount"
                                   readonly="state in ('processed', 'recovered', 'cancelled')"/>
                            <field name="current_surcharge" string="Recargo por Demora"
                                   readonly="state in ('processed', 'recovered', 'cancelled')"
                                   decoration-danger="current_surcharge > 0"/>
                            <div colspan="2" class="alert alert-primary p-2 mb-0 mt-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <strong>Total a Pagar:</strong>
                                    <field name="total_recovery_amount" nolabel="1"
                                           class="fs-4 fw-bold"/>
                                </div>
                            </div>
                        </group>
                    </group>

                    <!-- Información de Recuperación (si ya fue recuperado) -->
                    <group invisible="state != 'recovered'" class="alert alert-success">
                        <group string="Recuperación Completada">
                            <field name="recovery_date" readonly="1"/>
                            <field name="recovery_user_id" readonly="1"/>
                            <field name="recovery_amount_paid" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Pago al Cliente">
                            <field name="payment_method" readonly="state != 'draft'"/>
                            <field name="payment_journal_id"
                                   readonly="state != 'draft'"
                                   invisible="payment_method == 'cash'"
                                   required="payment_method != 'cash'"/>
                            <field name="payment_reference"
                                   readonly="state != 'draft'"
                                   invisible="payment_method == 'cash'"/>
                        </group>
                        <group string="Integración Caja" invisible="not pos_session_id">
                            <field name="pos_session_id" readonly="1"/>
                            <field name="pos_statement_line_id" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Items" name="lines">
                            <field name="line_ids" readonly="state == 'processed'">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="description" readonly="parent.state != 'draft'"/>
                                    <field name="jewelry_type_id" readonly="parent.state != 'draft'"
                                           options="{'no_create': True}"/>
                                    <field name="quality_id" readonly="parent.state != 'draft'"/>
                                    <field name="weight" readonly="parent.state != 'draft'"/>
                                    <field name="price" sum="Total" readonly="parent.state != 'draft'"/>
                                    <field name="image_count" string="Photos"/>
                                    <field name="line_state" widget="badge"
                                           decoration-warning="line_state == 'pending'"
                                           decoration-success="line_state == 'in_inventory'"
                                           decoration-danger="line_state == 'to_smelting'"
                                           column_invisible="parent.state not in ('available', 'processed')"/>
                                    <field name="product_id" optional="hide"
                                           column_invisible="parent.state not in ('available', 'processed')"/>
                                    <button name="action_send_to_inventory"
                                            type="object"
                                            string="Stock"
                                            icon="fa-archive"
                                            class="btn-link text-success"
                                            title="Send to Inventory"
                                            invisible="parent.state != 'available' or line_state != 'pending'"/>
                                    <button name="action_send_to_smelting"
                                            type="object"
                                            string="Smelt"
                                            icon="fa-fire"
                                            class="btn-link text-warning"
                                            title="Send to Smelting"
                                            invisible="parent.state != 'available' or line_state != 'pending'"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="amount_total" class="oe_subtotal_footer_separator"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <div class="oe_clear"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Internal notes..."/>
                        </page>
                        <page string="Photos" name="photos">
                            <field name="line_ids" readonly="state != 'draft'">
                                <list editable="bottom" create="false" delete="false">
                                    <field name="sequence" widget="handle"/>
                                    <field name="description" readonly="1" string="Item"/>
                                    <field name="image_ids" widget="many2many_binary"
                                           string="Photos"/>
                                    <field name="image_description"
                                           placeholder="Describe the items..."/>
                                </list>
                            </field>
                            <separator string="Photo Gallery"/>
                            <field name="line_ids" readonly="1">
                                <kanban class="o_kanban_mobile">
                                    <field name="description"/>
                                    <field name="image_description"/>
                                    <field name="image_count"/>
                                    <field name="image_preview"/>
                                    <templates>
                                        <t t-name="card">
                                            <div t-if="record.image_count.raw_value > 0">
                                                <div class="mb-2">
                                                    <strong class="fs-5">
                                                        <field name="description"/>
                                                    </strong>
                                                    <div t-if="record.image_description.value"
                                                         class="text-muted fst-italic">
                                                        <field name="image_description"/>
                                                    </div>
                                                </div>
                                                <field name="image_preview"/>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Client Purchase Order List View -->
    <record id="jewelry_client_purchase_view_list" model="ir.ui.view">
        <field name="name">jewelry.client.purchase.view.list</field>
        <field name="model">jewelry.client.purchase</field>
        <field name="arch" type="xml">
            <list string="Compras a Particulares"
                  decoration-info="state == 'draft'"
                  decoration-warning="state == 'blocked'"
                  decoration-primary="state == 'recoverable'"
                  decoration-success="state in ('available', 'recovered')"
                  decoration-muted="state in ('processed', 'cancelled')">
                <field name="name"/>
                <field name="state" column_invisible="1"/>
                <field name="operation_type" column_invisible="1"/>
                <button string="" icon="fa-shield" class="text-warning"
                        title="Bloqueo policial activo"
                        invisible="state != 'blocked'" disabled="1"/>
                <button string="" icon="fa-undo" class="text-primary"
                        title="Empeño recuperable"
                        invisible="operation_type != 'recoverable' or state not in ('blocked', 'recoverable', 'available')" disabled="1"/>
                <field name="date"/>
                <field name="partner_id"/>
                <field name="operation_type" widget="badge"
                       decoration-info="operation_type == 'recoverable'"
                       optional="show"/>
                <field name="amount_total" sum="Total"/>
                <field name="total_recovery_amount" string="Recuperación"
                       optional="hide"
                       invisible="operation_type != 'recoverable'"/>
                <field name="recovery_deadline" optional="hide"/>
                <field name="payment_method" optional="show"/>
                <field name="warehouse_id" optional="show" string="Tienda"/>
                <field name="blocking_end_date" optional="show"/>
                <field name="days_remaining" optional="show"/>
                <field name="user_id" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'blocked'"
                       decoration-primary="state == 'recoverable'"
                       decoration-success="state in ('available', 'processed', 'recovered')"
                       decoration-danger="state == 'cancelled'"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Client Purchase Order Kanban View -->
    <record id="jewelry_client_purchase_view_kanban" model="ir.ui.view">
        <field name="name">jewelry.client.purchase.view.kanban</field>
        <field name="model">jewelry.client.purchase</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state"
                    class="o_kanban_small_column"
                    quick_create="false">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="amount_total"/>
                <field name="currency_id"/>
                <field name="state"/>
                <field name="operation_type"/>
                <field name="days_remaining"/>
                <field name="recovery_deadline"/>
                <field name="total_recovery_amount"/>
                <progressbar field="state"
                             colors='{"draft": "secondary", "blocked": "warning", "recoverable": "info", "available": "success", "processed": "primary", "recovered": "success", "cancelled": "danger"}'/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="d-flex justify-content-between align-items-start">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <span t-if="record.operation_type.raw_value == 'recoverable'"
                                      class="badge bg-warning text-dark">EMPEÑO</span>
                            </div>
                            <div class="o_kanban_record_subtitle">
                                <field name="partner_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="amount_total" widget="monetary"/>
                                </div>
                            </div>
                            <!-- Bloqueo policial -->
                            <div t-if="record.state.raw_value == 'blocked'"
                                 class="d-flex align-items-center gap-1 mt-1">
                                <img src="/jewelry_purchase_client/static/img/logo_mossos.png"
                                     alt="Police" style="height: 18px; width: auto;"/>
                                <span class="badge bg-warning">
                                    <t t-esc="record.days_remaining.value"/> días
                                </span>
                            </div>
                            <!-- Empeño recuperable -->
                            <div t-if="record.state.raw_value == 'recoverable'"
                                 class="d-flex align-items-center gap-1 mt-1">
                                <i class="fa fa-undo text-primary"/>
                                <span class="badge bg-info">
                                    Hasta <t t-esc="record.recovery_deadline.value"/>
                                </span>
                            </div>
                            <!-- Total recuperación para empeños -->
                            <div t-if="record.operation_type.raw_value == 'recoverable' and record.state.raw_value in ['blocked', 'recoverable', 'available']"
                                 class="mt-1 text-muted small">
                                <i class="fa fa-money me-1"/>
                                Recuperación: <field name="total_recovery_amount" widget="monetary"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Client Purchase Order Search View -->
    <record id="jewelry_client_purchase_view_search" model="ir.ui.view">
        <field name="name">jewelry.client.purchase.view.search</field>
        <field name="model">jewelry.client.purchase</field>
        <field name="arch" type="xml">
            <search string="Buscar Compras">
                <field name="name" string="Referencia"
                       filter_domain="['|', ('name', 'ilike', self), ('partner_id', 'ilike', self)]"/>
                <field name="partner_id"/>
                <field name="warehouse_id" string="Tienda"/>
                <field name="user_id"/>
                <separator/>
                <!-- Filtros por tipo de operación -->
                <filter name="filter_purchases" string="Compras"
                        domain="[('operation_type', '=', 'purchase')]"/>
                <filter name="filter_pawns" string="Empeños"
                        domain="[('operation_type', '=', 'recoverable')]"/>
                <separator/>
                <!-- Filtros por estado -->
                <filter name="filter_draft" string="Borrador"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_blocked" string="Bloqueo Policial"
                        domain="[('state', '=', 'blocked')]"/>
                <filter name="filter_recoverable" string="Recuperable"
                        domain="[('state', '=', 'recoverable')]"/>
                <filter name="filter_available" string="Disponible"
                        domain="[('state', '=', 'available')]"/>
                <filter name="filter_processed" string="Procesado"
                        domain="[('state', '=', 'processed')]"/>
                <filter name="filter_recovered" string="Recuperado"
                        domain="[('state', '=', 'recovered')]"/>
                <separator/>
                <!-- Filtros especiales para empeños -->
                <filter name="filter_pawns_active" string="Empeños Activos"
                        domain="[('operation_type', '=', 'recoverable'), ('state', 'in', ['blocked', 'recoverable'])]"/>
                <filter name="filter_pawns_expiring" string="Empeños por Vencer"
                        domain="[('operation_type', '=', 'recoverable'), ('state', '=', 'recoverable'), ('recovery_deadline', '&lt;=', (context_today() + relativedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_pawns_expired" string="Empeños Vencidos"
                        domain="[('operation_type', '=', 'recoverable'), ('state', '=', 'available')]"/>
                <separator/>
                <filter name="filter_my" string="Mis Compras"
                        domain="[('user_id', '=', uid)]"/>
                <filter name="filter_today" string="Hoy"
                        domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="Este Mes"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('date', '&lt;', (context_today() + relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter name="filter_ready_to_process" string="Listo para Procesar"
                        domain="[('state', 'in', ['blocked', 'available']), ('blocking_end_date', '&lt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter name="filter_cash" string="Efectivo"
                        domain="[('payment_method', '=', 'cash')]"/>
                <filter name="filter_transfer" string="Transferencia"
                        domain="[('payment_method', '=', 'transfer')]"/>
                <filter name="filter_bizum" string="Bizum"
                        domain="[('payment_method', '=', 'bizum')]"/>
                <filter name="filter_paypal" string="PayPal"
                        domain="[('payment_method', '=', 'paypal')]"/>
                <filter name="filter_stripe" string="Stripe"
                        domain="[('payment_method', '=', 'stripe')]"/>
                <filter name="filter_card" string="Tarjeta"
                        domain="[('payment_method', '=', 'card')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter name="group_warehouse" string="Tienda"
                            context="{'group_by': 'warehouse_id'}"/>
                    <filter name="group_operation_type" string="Tipo de Operación"
                            context="{'group_by': 'operation_type'}"/>
                    <filter name="group_state" string="Estado"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_partner" string="Cliente"
                            context="{'group_by': 'partner_id'}"/>
                    <filter name="group_user" string="Vendedor"
                            context="{'group_by': 'user_id'}"/>
                    <filter name="group_date" string="Fecha"
                            context="{'group_by': 'date:month'}"/>
                    <filter name="group_date_day" string="Fecha (Día)"
                            context="{'group_by': 'date:day'}"/>
                    <filter name="group_payment_method" string="Forma de Pago"
                            context="{'group_by': 'payment_method'}"/>
                </group>
                <searchpanel>
                    <field name="warehouse_id" icon="fa-building" enable_counters="1"/>
                    <field name="operation_type" icon="fa-tags" enable_counters="1"/>
                    <field name="state" icon="fa-tasks" enable_counters="1"/>
                    <field name="user_id" icon="fa-user" select="multi" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Client Purchase Pivot View (for payment analysis) -->
    <record id="jewelry_client_purchase_view_pivot" model="ir.ui.view">
        <field name="name">jewelry.client.purchase.view.pivot</field>
        <field name="model">jewelry.client.purchase</field>
        <field name="arch" type="xml">
            <pivot string="Payment Analysis" sample="1">
                <field name="date" type="row" interval="day"/>
                <field name="payment_method" type="col"/>
                <field name="amount_total" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Client Purchase Graph View -->
    <record id="jewelry_client_purchase_view_graph" model="ir.ui.view">
        <field name="name">jewelry.client.purchase.view.graph</field>
        <field name="model">jewelry.client.purchase</field>
        <field name="arch" type="xml">
            <graph string="Purchases by Payment Method" type="bar" sample="1">
                <field name="payment_method"/>
                <field name="amount_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Client Purchase Line Form View (for popup editing) -->
    <record id="jewelry_client_purchase_line_view_form" model="ir.ui.view">
        <field name="name">jewelry.client.purchase.line.view.form</field>
        <field name="model">jewelry.client.purchase.line</field>
        <field name="arch" type="xml">
            <form string="Purchase Line">
                <sheet>
                    <group>
                        <group string="Item Details">
                            <field name="description"/>
                            <field name="jewelry_type_id" options="{'no_create': True}"/>
                            <field name="quality_id"/>
                            <field name="weight"/>
                            <field name="price"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Photos">
                            <field name="image_ids" widget="many2many_binary"
                                   nolabel="1"/>
                            <field name="image_description"
                                   placeholder="Describe the items shown in the photos..."/>
                            <field name="image_count" invisible="1"/>
                        </group>
                    </group>
                    <!-- AI Analysis section (prepared for future use) -->
                    <group string="AI Analysis" invisible="not ai_description">
                        <field name="ai_description"/>
                        <label for="ai_model"/>
                        <div class="o_row">
                            <field name="ai_model" class="oe_inline"/>
                            <span class="text-muted mx-2">|</span>
                            <field name="ai_generated_date" class="oe_inline"/>
                        </div>
                        <field name="ai_confidence" widget="progressbar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Window Action -->
    <record id="jewelry_client_purchase_action" model="ir.actions.act_window">
        <field name="name">Client Purchases</field>
        <field name="res_model">jewelry.client.purchase</field>
        <field name="view_mode">list,kanban,pivot,graph,form</field>
        <field name="context">{'search_default_filter_my': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register a new client purchase
            </p>
            <p>
                Record purchases of gold and jewelry from individual clients.
                Items are subject to a legal blocking period before processing.
            </p>
        </field>
    </record>

    <!-- Payment Analysis Action (opens pivot view with today filter) -->
    <record id="jewelry_client_purchase_payment_analysis_action" model="ir.actions.act_window">
        <field name="name">Análisis de Pagos</field>
        <field name="res_model">jewelry.client.purchase</field>
