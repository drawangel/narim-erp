<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Client Purchase Order Form View -->
    <record id="jewelry_client_purchase_view_form" model="ir.ui.view">
        <field name="name">jewelry.client.purchase.view.form</field>
        <field name="model">jewelry.client.purchase</field>
        <field name="arch" type="xml">
            <form string="Client Purchase">
                <header>
                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_mark_available"
                            string="Mark Available"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'blocked' or not can_process"/>
                    <button name="action_open_force_unlock_wizard"
                            string="Force Unlock"
                            type="object"
                            class="btn-warning"
                            groups="jewelry_base.group_jewelry_manager"
                            invisible="state != 'blocked'"/>
                    <!-- Bulk actions for Available state -->
                    <button name="action_open_receive_all_wizard"
                            string="Receive All"
                            type="object"
                            class="btn-primary"
                            icon="fa-archive"
                            groups="jewelry_base.group_jewelry_manager"
                            invisible="state != 'available'"/>
                    <button name="action_open_smelt_all_wizard"
                            string="Smelt All"
                            type="object"
                            class="btn-warning"
                            icon="fa-fire"
                            groups="jewelry_base.group_jewelry_manager"
                            invisible="state != 'available'"/>
                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            invisible="state in ('processed', 'cancelled')"/>
                    <button name="action_draft"
                            string="Reset to Draft"
                            type="object"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,blocked,available,processed"/>
                </header>
                <sheet>
                    <!-- Blocking period ribbon with police badge -->
                    <widget name="web_ribbon" title="Blocking Period"
                            bg_color="bg-warning"
                            invisible="state != 'blocked'"/>
                    <img src="/jewelry_purchase_client/static/img/logo_mossos.png?v=3"
                         alt="Police"
                         title="Police blocking period active"
                         class="o_police_badge"
                         invisible="state != 'blocked'"/>
                    <widget name="web_ribbon" title="Cancelled"
                            bg_color="bg-danger"
                            invisible="state != 'cancelled'"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Client Information">
                            <field name="partner_id"
                                   readonly="state != 'draft'"
                                   context="{'show_vat': True}"/>
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="user_id"/>
                        </group>
                        <group string="Blocking Period" invisible="state == 'draft'">
                            <field name="blocking_days"/>
                            <field name="blocking_end_date"/>
                            <field name="days_remaining"
                                   invisible="state not in ('confirmed', 'blocked')"/>
                            <field name="can_process" invisible="1"/>
                            <field name="force_unlocked" invisible="1"/>
                            <div colspan="2" class="text-warning fw-bold"
                                 invisible="not force_unlocked">
                                <i class="fa fa-exclamation-triangle me-1"/>
                                Force unlocked by
                                <field name="force_unlock_user_id"
                                       widget="many2one_avatar_user"
                                       class="d-inline mx-1" readonly="1"/>
                                on <field name="force_unlock_date" readonly="1"/>
                            </div>
                        </group>
                    </group>

                    <group>
                        <group string="Pago al Cliente">
                            <field name="payment_method" readonly="state != 'draft'"/>
                            <field name="payment_journal_id"
                                   readonly="state != 'draft'"
                                   invisible="payment_method == 'cash'"
                                   required="payment_method != 'cash'"/>
                            <field name="payment_reference"
                                   readonly="state != 'draft'"
                                   invisible="payment_method == 'cash'"/>
                        </group>
                        <group string="Integración Caja" invisible="not pos_session_id">
                            <field name="pos_session_id" readonly="1"/>
                            <field name="pos_statement_line_id" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Items" name="lines">
                            <field name="line_ids" readonly="state == 'processed'">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="description" readonly="parent.state != 'draft'"/>
                                    <field name="quality_id" readonly="parent.state != 'draft'"/>
                                    <field name="weight" readonly="parent.state != 'draft'"/>
                                    <field name="price" sum="Total" readonly="parent.state != 'draft'"/>
                                    <field name="image_count" string="Photos"/>
                                    <field name="line_state" widget="badge"
                                           decoration-warning="line_state == 'pending'"
                                           decoration-success="line_state == 'in_inventory'"
                                           decoration-danger="line_state == 'to_smelting'"
                                           column_invisible="parent.state not in ('available', 'processed')"/>
                                    <field name="product_id" optional="hide"
                                           column_invisible="parent.state not in ('available', 'processed')"/>
                                    <button name="action_send_to_inventory"
                                            type="object"
                                            string="Stock"
                                            icon="fa-archive"
                                            class="btn-link text-success"
                                            title="Send to Inventory"
                                            invisible="parent.state != 'available' or line_state != 'pending'"/>
                                    <button name="action_send_to_smelting"
                                            type="object"
                                            string="Smelt"
                                            icon="fa-fire"
                                            class="btn-link text-warning"
                                            title="Send to Smelting"
                                            invisible="parent.state != 'available' or line_state != 'pending'"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="amount_total" class="oe_subtotal_footer_separator"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <div class="oe_clear"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Internal notes..."/>
                        </page>
                        <page string="Photos" name="photos">
                            <field name="line_ids" readonly="state != 'draft'">
                                <list editable="bottom" create="false" delete="false">
                                    <field name="sequence" widget="handle"/>
                                    <field name="description" readonly="1" string="Item"/>
                                    <field name="image_ids" widget="many2many_binary"
                                           string="Photos"/>
                                    <field name="image_description"
                                           placeholder="Describe the items..."/>
                                </list>
                            </field>
                            <separator string="Photo Gallery"/>
                            <field name="line_ids" readonly="1">
                                <kanban class="o_kanban_mobile">
                                    <field name="description"/>
                                    <field name="image_description"/>
                                    <field name="image_count"/>
                                    <field name="image_preview"/>
                                    <templates>
                                        <t t-name="card">
                                            <div t-if="record.image_count.raw_value > 0">
                                                <div class="mb-2">
                                                    <strong class="fs-5">
                                                        <field name="description"/>
                                                    </strong>
                                                    <div t-if="record.image_description.value"
                                                         class="text-muted fst-italic">
                                                        <field name="image_description"/>
                                                    </div>
                                                </div>
                                                <field name="image_preview"/>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Client Purchase Order List View -->
    <record id="jewelry_client_purchase_view_list" model="ir.ui.view">
        <field name="name">jewelry.client.purchase.view.list</field>
        <field name="model">jewelry.client.purchase</field>
        <field name="arch" type="xml">
            <list string="Client Purchases"
                  decoration-info="state == 'draft'"
                  decoration-warning="state == 'blocked'"
                  decoration-success="state == 'available'"
                  decoration-muted="state in ('processed', 'cancelled')">
                <field name="name"/>
                <field name="state" column_invisible="1"/>
                <button string="" icon="fa-shield" class="text-warning"
                        title="Police blocking period"
                        invisible="state != 'blocked'" disabled="1"/>
                <field name="date"/>
                <field name="partner_id"/>
                <field name="amount_total" sum="Total"/>
                <field name="payment_method" optional="show"/>
                <field name="blocking_end_date" optional="show"/>
                <field name="days_remaining" optional="show"/>
                <field name="user_id" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'blocked'"
                       decoration-success="state in ('available', 'processed')"
                       decoration-danger="state == 'cancelled'"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Client Purchase Order Kanban View -->
    <record id="jewelry_client_purchase_view_kanban" model="ir.ui.view">
        <field name="name">jewelry.client.purchase.view.kanban</field>
        <field name="model">jewelry.client.purchase</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state"
                    class="o_kanban_small_column"
                    quick_create="false">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="amount_total"/>
                <field name="currency_id"/>
                <field name="state"/>
                <field name="days_remaining"/>
                <progressbar field="state"
                             colors='{"draft": "secondary", "blocked": "warning", "available": "success", "processed": "primary", "cancelled": "danger"}'/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <strong class="o_kanban_record_title">
                                <field name="name"/>
                            </strong>
                            <div class="o_kanban_record_subtitle">
                                <field name="partner_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="amount_total" widget="monetary"/>
                                </div>
                            </div>
                            <div t-if="record.state.raw_value == 'blocked'"
                                 class="d-flex align-items-center gap-1 mt-1">
                                <img src="/jewelry_purchase_client/static/img/logo_mossos.png"
                                     alt="Police" style="height: 18px; width: auto;"/>
                                <span class="badge bg-warning">
                                    <t t-esc="record.days_remaining.value"/> days
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Client Purchase Order Search View -->
    <record id="jewelry_client_purchase_view_search" model="ir.ui.view">
        <field name="name">jewelry.client.purchase.view.search</field>
        <field name="model">jewelry.client.purchase</field>
        <field name="arch" type="xml">
            <search string="Search Client Purchases">
                <field name="name" string="Reference"
                       filter_domain="['|', ('name', 'ilike', self), ('partner_id', 'ilike', self)]"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <separator/>
                <filter name="filter_draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_blocked" string="Blocking Period"
                        domain="[('state', '=', 'blocked')]"/>
                <filter name="filter_available" string="Available"
                        domain="[('state', '=', 'available')]"/>
                <filter name="filter_processed" string="Processed"
                        domain="[('state', '=', 'processed')]"/>
                <separator/>
                <filter name="filter_my" string="My Purchases"
                        domain="[('user_id', '=', uid)]"/>
                <filter name="filter_today" string="Today"
                        domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="This Month"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('date', '&lt;', (context_today() + relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter name="filter_ready_to_process" string="Ready to Process"
                        domain="[('state', 'in', ['blocked', 'available']), ('blocking_end_date', '&lt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter name="filter_cash" string="Efectivo"
                        domain="[('payment_method', '=', 'cash')]"/>
                <filter name="filter_transfer" string="Transferencia"
                        domain="[('payment_method', '=', 'transfer')]"/>
                <filter name="filter_bizum" string="Bizum"
                        domain="[('payment_method', '=', 'bizum')]"/>
                <filter name="filter_paypal" string="PayPal"
                        domain="[('payment_method', '=', 'paypal')]"/>
                <filter name="filter_stripe" string="Stripe"
                        domain="[('payment_method', '=', 'stripe')]"/>
                <filter name="filter_card" string="Tarjeta"
                        domain="[('payment_method', '=', 'card')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_state" string="State"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_partner" string="Client"
                            context="{'group_by': 'partner_id'}"/>
                    <filter name="group_user" string="Salesperson"
                            context="{'group_by': 'user_id'}"/>
                    <filter name="group_date" string="Date"
                            context="{'group_by': 'date:month'}"/>
                    <filter name="group_date_day" string="Date (Day)"
                            context="{'group_by': 'date:day'}"/>
                    <filter name="group_payment_method" string="Payment Method"
                            context="{'group_by': 'payment_method'}"/>
                </group>
                <searchpanel>
                    <field name="state" icon="fa-tasks" enable_counters="1"/>
                    <field name="user_id" icon="fa-user" select="multi" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Client Purchase Pivot View (for payment analysis) -->
    <record id="jewelry_client_purchase_view_pivot" model="ir.ui.view">
        <field name="name">jewelry.client.purchase.view.pivot</field>
        <field name="model">jewelry.client.purchase</field>
        <field name="arch" type="xml">
            <pivot string="Payment Analysis" sample="1">
                <field name="date" type="row" interval="day"/>
                <field name="payment_method" type="col"/>
                <field name="amount_total" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Client Purchase Graph View -->
    <record id="jewelry_client_purchase_view_graph" model="ir.ui.view">
        <field name="name">jewelry.client.purchase.view.graph</field>
        <field name="model">jewelry.client.purchase</field>
        <field name="arch" type="xml">
            <graph string="Purchases by Payment Method" type="bar" sample="1">
                <field name="payment_method"/>
                <field name="amount_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Client Purchase Line Form View (for popup editing) -->
    <record id="jewelry_client_purchase_line_view_form" model="ir.ui.view">
        <field name="name">jewelry.client.purchase.line.view.form</field>
        <field name="model">jewelry.client.purchase.line</field>
        <field name="arch" type="xml">
            <form string="Purchase Line">
                <sheet>
                    <group>
                        <group string="Item Details">
                            <field name="description"/>
                            <field name="quality_id"/>
                            <field name="weight"/>
                            <field name="price"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Photos">
                            <field name="image_ids" widget="many2many_binary"
                                   nolabel="1"/>
                            <field name="image_description"
                                   placeholder="Describe the items shown in the photos..."/>
                            <field name="image_count" invisible="1"/>
                        </group>
                    </group>
                    <!-- AI Analysis section (prepared for future use) -->
                    <group string="AI Analysis" invisible="not ai_description">
                        <field name="ai_description"/>
                        <label for="ai_model"/>
                        <div class="o_row">
                            <field name="ai_model" class="oe_inline"/>
                            <span class="text-muted mx-2">|</span>
                            <field name="ai_generated_date" class="oe_inline"/>
                        </div>
                        <field name="ai_confidence" widget="progressbar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Window Action -->
    <record id="jewelry_client_purchase_action" model="ir.actions.act_window">
        <field name="name">Client Purchases</field>
        <field name="res_model">jewelry.client.purchase</field>
        <field name="view_mode">list,kanban,pivot,graph,form</field>
        <field name="context">{'search_default_filter_my': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register a new client purchase
            </p>
            <p>
                Record purchases of gold and jewelry from individual clients.
                Items are subject to a legal blocking period before processing.
            </p>
        </field>
    </record>

    <!-- Payment Analysis Action (opens pivot view with today filter) -->
    <record id="jewelry_client_purchase_payment_analysis_action" model="ir.actions.act_window">
        <field name="name">Análisis de Pagos</field>
        <field name="res_model">jewelry.client.purchase</field>
        <field name="view_mode">pivot,graph,list,form</field>
        <field name="context">{
            'search_default_filter_today': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay compras para analizar
            </p>
            <p>
                Utilice los filtros para ver el desglose por método de pago.
            </p>
        </field>
    </record>
</odoo>
