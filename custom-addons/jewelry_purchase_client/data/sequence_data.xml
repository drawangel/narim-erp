<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for client purchase references -->
        <record id="sequence_client_purchase" model="ir.sequence">
            <field name="name">Client Purchase Sequence</field>
            <field name="code">jewelry.client.purchase</field>
            <field name="prefix">CP/%(year)s/</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
