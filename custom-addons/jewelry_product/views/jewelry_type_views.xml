<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Jewelry Type Form View -->
    <record id="jewelry_type_view_form" model="ir.ui.view">
        <field name="name">jewelry.type.view.form</field>
        <field name="model">jewelry.type</field>
        <field name="arch" type="xml">
            <form string="Tipo de Joya">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <group>
                        <group string="General">
                            <field name="name" placeholder="ej: Anillo"/>
                            <field name="sequence"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Auto-detección">
                            <field name="keywords"
                                   placeholder="anillo, alianza, sortija, solitario"
                                   widget="text"/>
                        </group>
                    </group>
                    <div class="alert alert-info" role="alert">
                        <strong>Palabras clave:</strong> Palabras separadas por comas para
                        auto-selección cuando se encuentran en la descripción del artículo.
                        <br/>
                        <em>Ejemplo: Para "Anillo", usar: anillo, alianza, sortija, solitario</em>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Jewelry Type List View -->
    <record id="jewelry_type_view_list" model="ir.ui.view">
        <field name="name">jewelry.type.view.list</field>
        <field name="model">jewelry.type</field>
        <field name="arch" type="xml">
            <list string="Tipos de Joya" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="keywords" widget="text"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Jewelry Type Search View -->
    <record id="jewelry_type_view_search" model="ir.ui.view">
        <field name="name">jewelry.type.view.search</field>
        <field name="model">jewelry.type</field>
        <field name="arch" type="xml">
            <search string="Buscar Tipos de Joya">
                <field name="name"/>
                <field name="keywords"/>
                <filter name="filter_inactive" string="Archivados"
                        domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Window Action -->
    <record id="jewelry_type_action" model="ir.actions.act_window">
        <field name="name">Tipos de Joya</field>
        <field name="res_model">jewelry.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear el primer tipo de joya
            </p>
            <p>
                Los tipos de joya clasifican los artículos (Anillo, Collar, Pendientes, etc.).
                Añade palabras clave para habilitar la auto-detección desde las descripciones.
            </p>
        </field>
    </record>

    <!-- Menu item under Jewelry configuration -->
    <menuitem id="jewelry_type_menu"
              name="Tipos de Joya"
              parent="jewelry_base.jewelry_menu_config"
              action="jewelry_type_action"
              sequence="20"/>
</odoo>
